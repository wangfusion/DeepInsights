<Window x:Class="DeepInsights.Shell.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cal="http://www.codeplex.com/prism"
        xmlns:infra="clr-namespace:DeepInsights.Shell.Infrastructure;assembly=DeepInsights.Shell.Infrastructure"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" Title="Shell" Height="800" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.9*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1.1*" />
        </Grid.ColumnDefinitions>
        <ContentControl Name="LeftMostRegion" Grid.Column="0"
                        cal:RegionManager.RegionName="{x:Static Member=infra:RegionNames.LeftMostRegion}" />
        <ContentControl Name="CenterRegion" Grid.Column="1"
                        cal:RegionManager.RegionName="{x:Static Member=infra:RegionNames.CenterRegion}" />
        <ContentControl Name="RightMostRegion" Grid.Column="2"
                        cal:RegionManager.RegionName="{x:Static Member=infra:RegionNames.RightMostRegion}" />
    </Grid>
</Window>
